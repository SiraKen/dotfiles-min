root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Shell
[*.{zshrc,zprofile,bashrc,fish}]
indent_size = 2

[*.ps1]
indent_size = 4

# Lua
[*.lua]
indent_size = 2

# Docs
[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{js,jsx,ts,tsx,json}]
indent_size = 2
